# Maintainer: Jordan Christiansen <xordspar0@gmail.com>
pkgname=minecraft-auto-shutdown
pkgver=1
pkgrel=1
pkgdesc="Automatically shut down the Minecraft server at 10 pm every day"
arch=('any')
license=('MIT')
depends=('minecraft-server')
source=(minecraft-auto-shutdown.timer
        minecraft-auto-shutdown.service
        minecraft-shutdown.sh)
sha256sums=('9737c6765e35c8b63c4b5792580704c15dfdfee2a1bf7b4ff4491c0defc35f0f'
            '1aa3e743d4e67d45eb16c63638014c6ef79e44e06934f54352060886c614bd38'
            'd46a7ed94afb90299b9bce35a76966fa45da46444b1cb39ac7c457924557f17c')

package() {
        install -d "${pkgdir}/usr/lib/systemd/system/"
	install -m644 minecraft-auto-shutdown.* "${pkgdir}/usr/lib/systemd/system/"
	install -Dm755 minecraft-shutdown.sh "${pkgdir}/usr/bin/minecraft-shutdown"
}
